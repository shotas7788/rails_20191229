<%= form_with(model: food_enquete, local: true) do |form| %>
  <% if food_enquete.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% food_enquete.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'concerns/form_name_mail_age', form: form %>

  <div class="field">
    <%= form.label :food_id %>
    <%= form.select :food_id, food_enquete.food_choices %><%# ラーメン、カレー、やきそば %>
  </div>

  <%= render 'concerns/form_score_request', form: form %>

  <div class="field">
    <%= form.label :present_id %>
    <%= form.select :present_id, food_enquete.present_choices %><%# ソフトドリンク飲み放題、ビール飲み放題 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>